# Database
DATABASE_URL="postgresql://swifttok:swifttok@localhost:5432/swifttok?schema=public"

# OpenAI
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4o-mini"
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_DELAY_MS=1000
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.85

# Facebook (optional — can also be configured in Settings UI)
FACEBOOK_PAGE_ID=""
FACEBOOK_PAGE_ACCESS_TOKEN=""
FACEBOOK_GRAPH_API_BASE="https://graph.facebook.com/v19.0"

# Instagram (optional)
INSTAGRAM_ACCOUNT_ID=""
INSTAGRAM_ACCESS_TOKEN=""

# X / Twitter (optional)
X_API_KEY=""
X_API_SECRET=""
X_ACCESS_TOKEN=""
X_ACCESS_SECRET=""

# Worker
WORKER_POLL_INTERVAL_MS=30000
WORKER_MAX_ATTEMPTS=3
WORKER_BACKOFF_MINUTES="1,5,15"
WORKER_BATCH_SIZE=10

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=60
RATE_LIMIT_PER_WINDOW=200
API_RATE_LIMIT_PER_MINUTE=60

# Content
MAX_VARIANTS=10
SCHEDULE_TIMES="09:00,10:30,12:00,13:30,15:00,16:30,18:00,19:30,21:00"

# Image Upload
UPLOAD_MAX_FILE_SIZE_MB=10
UPLOAD_DIR="public/uploads"

# Authentication (optional — disabled by default)
AUTH_ENABLED=false
NEXTAUTH_SECRET="change-this-to-a-random-secret"
ADMIN_USERNAME="admin"
ADMIN_PASSWORD=""

# Logging
LOG_LEVEL="info"
